css-doodle.
    :doodle {@grid: 3x3;} @place-cell: center; position:
    relative; top: @rand(-80%, 80%); left: @rand(-80%, 80%); opacity:
    @rand(.3, .8); width: @rand(40vmin, 80vmin); height: @rand(40vmin,
    80vmin); transform: translate(@rand(-200%, 200%), @rand(-60%, 60%))
    scale(@rand(.8, 1.8)) skew(@rand(45deg)); clip-path: polygon( @r(0, 30%)
    @r(0, 50%), @r(30%, 60%) @r(0%, 30%), @r(60%, 100%) @r(0%, 50%), @r(60%,
    100%) @r(50%, 100%), @r(30%, 60%) @r(60%, 100%), @r(0, 30%) @r(60%, 100%)
    ); background: @pick(#f44336, #e91e63, #9c27b0, #673ab7, #3f51b5,
    #60569e, #e6437d, #ebbf4d, #00bcd4, #03a9f4, #2196f3, #009688, #5ee463,
    #f8e645, #ffc107, #ff5722, #43f8bf); animation: colorChange @rand(6.1s,
    16.1s) infinite @rand(-.5s, -2.5s) linear alternate; @keyframes
    colorChange { 100% { left: 0; top: 0; filter: hue-rotate(360deg);}}